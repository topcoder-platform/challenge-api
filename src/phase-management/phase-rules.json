    "Open": [
      {
        "name": "Open Registration & Submission",
        "conditions": {
          "all": [
            {
              "fact": "isPastScheduledStartTime",
              "operator": "equal",
              "value": true
            },
            {
              "fact": "isOpen",
              "operator": "notEqual",
              "value": true
            },
            {
              "fact": "isClosed",
